   "source": [
    "## Run Your Calendar Sync\n",
    "\n",
    "After saving your configuration, you can run your calendar sync directly from this notebook, or use the terminal commands shown below for continuous background syncing."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "source": [
    "import subprocess\n",
    "import threading\n",
    "import time\n",
    "import os\n",
    "from IPython.display import clear_output\n",
    "\n",
    "# Create buttons\n",
    "start_btn = widgets.Button(description='Start Sync', button_style='success', layout=widgets.Layout(width='150px'))\n",
    "stop_btn = widgets.Button(description='Stop Sync', button_style='danger', layout=widgets.Layout(width='150px'))\n",
    "log_output = widgets.Output(layout={'border': '1px solid #ddd', 'max_height': '300px', 'overflow_y': 'auto'})\n",
    "\n",
    "# Track process\n",
    "sync_process = None\n",
    "log_monitor = None\n",
    "stop_monitoring = False\n",
    "\n",
    "def start_sync(b):\n",
    "    global sync_process, log_monitor, stop_monitoring\n",
    "    \n",
    "    if sync_process is not None and sync_process.poll() is None:\n",
    "        with log_output:\n",
    "            print(\"Sync is already running\!\")\n",
    "        return\n",
    "    \n",
    "    # Clear previous output\n",
    "    log_output.clear_output()\n",
    "    \n",
    "    # Start the process\n",
    "    with log_output:\n",
    "        print(\"Starting calendar sync...\")\n",
    "    \n",
    "    sync_process = subprocess.Popen(['python', 'run_calendar_sync.py'], \n",
    "                                   stdout=subprocess.PIPE, \n",
    "                                   stderr=subprocess.STDOUT,\n",
    "                                   universal_newlines=True,\n",
    "                                   bufsize=1)\n",
    "    \n",
    "    # Start monitoring logs\n",
    "    stop_monitoring = False\n",
    "    log_monitor = threading.Thread(target=monitor_logs)\n",
    "    log_monitor.daemon = True\n",
    "    log_monitor.start()\n",
    "\n",
    "def stop_sync(b):\n",
    "    global sync_process, stop_monitoring\n",
    "    \n",
    "    if sync_process is None or sync_process.poll() is not None:\n",
    "        with log_output:\n",
    "            print(\"No sync process is running.\")\n",
    "        return\n",
    "    \n",
    "    with log_output:\n",
    "        print(\"Stopping sync process...\")\n",
    "    \n",
    "    # Stop log monitoring\n",
    "    stop_monitoring = True\n",
    "    \n",
    "    # Terminate process\n",
    "    sync_process.terminate()\n",
    "    try:\n",
    "        sync_process.wait(timeout=5)\n",
    "    except subprocess.TimeoutExpired:\n",
    "        sync_process.kill()\n",
    "    \n",
    "    with log_output:\n",
    "        print(\"Sync process stopped.\")\n",
    "\n",
    "def monitor_logs():\n",
    "    # Monitor process output and update log display\n",
    "    while not stop_monitoring and sync_process and sync_process.poll() is None:\n",
    "        line = sync_process.stdout.readline()\n",
    "        if line:\n",
    "            with log_output:\n",
    "                print(line.strip())\n",
    "        else:\n",
    "            time.sleep(0.1)\n",
    "    \n",
    "    # Process ended\n",
    "    if sync_process and sync_process.poll() is not None and not stop_monitoring:\n",
    "        with log_output:\n",
    "            print(f\"Sync process ended with status code {sync_process.returncode}\")\n",
    "\n",
    "# Set up event handlers\n",
    "start_btn.on_click(start_sync)\n",
    "stop_btn.on_click(stop_sync)\n",
    "\n",
    "# Display the controls\n",
    "display(widgets.HBox([start_btn, stop_btn]))\n",
    "display(log_output)\n",
    "\n",
    "# Show terminal commands\n",
    "display(HTML(\"\"\"\n",
    "<div style=\"background-color: #f5f5f5; padding: 15px; border-radius: 5px; margin-top: 20px;\">\n",
    "    <h3>Running in the Background</h3>\n",
    "    <p>To run the sync continuously in the background (after closing this notebook), use:</p>\n",
    "    <pre style=\"background-color: #eee; padding: 10px;\">\n",
    "# On macOS/Linux:\n",
    "nohup python run_calendar_sync.py > calendar_sync.log 2>&1 &\n",
    "\n",
    "# On Windows, create a .bat file with:\n",
    "start /B pythonw run_calendar_sync.py\n",
    "    </pre>\n",
    "</div>\n",
    "\"\"\"))"
   ]
